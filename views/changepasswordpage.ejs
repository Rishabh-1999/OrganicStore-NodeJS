<% layout('layout/layout') %>

<% include partials/navbar.ejs %>

<div class="container" style="margin-top:80px;">
    <h1 class="text-center display-4 font-weight-bold"><u>Change Password</u></h1>
    <br>
    <main role="main">
        <div class="container">
            <% if (success.length > 0) { %>
            <br />
            <div class="alert alert-success text-center" style="width:100%;margin-left:10px;margin-right:10px;">
                <%= success %>
            </div>
            <% } %>

            <% if (errors.length > 0) { %>
            <br />
            <div class="alert alert-danger text-center" style="width:100%;margin-left:10px;margin-right:10px;">
                <%= errors %>
            </div>
            <% } %>
            <form method="POST" action="/user/changepassword">
                <div id="addInvalid" class="row card-title">
                </div>
                <div class="form-group">
                    <label>*Old Change</label>
                    <input type="text" class="form-control" name="oldpass" placeholder="Old Password" required>
                </div>
                <div class="form-group">
                    <label>*New Pasword</label>
                    <input type="text" class="form-control" name="newpass" placeholder="New Password" required>
                </div>
                <button class="btn btn-primary" type="submit">Change Password</button>
            </form>
    </main>
</div>