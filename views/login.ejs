<% layout('layout/layout') %>

<link rel="stylesheet" href="../css/login-css.css">

<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card my-5">
        <div class="card-body">
          <h1 class="text-center display-3" sty><i class="fa fa-pagelines"></i></h1>
          <h5 class="text-center"> Sign In </h5>
          <% if (errors.length > 0) { %>
          <br>
          <div class="alert alert-danger text-center" style="width:100%;margin-left:10px;margin-right:10px;">
            <%= errors %>
          </div>
          <% } %>
          <% if (success.length > 0) { %>
          <br>
          <div class="alert alert-success text-center" style="width:100%;margin-left:10px;margin-right:10px;">
            <%= success %>
          </div>
          <% } %>
          <form method="POST" action="/user/checkLogin">
            <div class="form-label-group">
              <label for="inputEmail"> Email address </label>
              <input type="email" id="email" class="form-control" name="email" placeholder="Email address" required
                autofocus>
            </div>
            <div class="form-label-group">
              <label for="inputPassword"> Password </label>
              <input type="password" id="password" class="form-control" name="password" placeholder="Password" required>
            </div>
            <div style="margin:10px;">
              <button class="btn btn-lg btn-primary btn-block text-uppercase" id="submit" type="submit"> Sign in
              </button>
            </div>
          </form>
          <hr class="md-4">
          <p class="text-right"><a href="/register">Register Here!</a></p>
        </div>
      </div>
    </div>
  </div>
</div>