<% layout('layout/layout') %>

<% include partials/navbar.ejs %>

<div class="container" style="margin-top:80px;">
    <h1 class="text-center"><u>Add Product</u></h1>
    <br>
    <main role="main">
        <form action="/products/addproduct" method="POST" enctype='multipart/form-data'>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label>*Category</label>
                    <select class="form-control" name="category" required>
                        <option name="Fruit" selected>Fruit</option>
                        <option name="Juice">Juice</option>
                        <option name="Vegetable">Vegetable</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label>*Product Name</label>
                <input type="name" class="form-control" name="productname" placeholder="Product Name" required>
            </div>
            <div class="form-group">
                <label>*Price</label>
                <input type="number" class="form-control" name="price" placeholder="Price" required>
            </div>
            <div class="form-group">
                <label>*Upload photo</label>
                <input type="file" name="productphoto" required="required">
            </div>
            <div class="form-group">
                <div class="form-check" name="checkbox">
                    <input class="form-check-input" type="checkbox" name="check" id="invalidCheck2" required>
                    <label class="form-check-label" for="invalidCheck2">
                        *Agree to terms and conditions
                    </label>
                </div>
            </div>
            <button class="btn btn-primary" type="submit">Add Product</button>
        </form>
    </main>
</div>
<br><br>