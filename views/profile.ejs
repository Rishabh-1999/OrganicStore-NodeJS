<% layout('layout/layout') %>

<% include partials/navbar.ejs %>

<div class="container" style="margin-top:80px;">
    <h1 class="text-center display-4 font-weight-bold"><u>Profile</u></h1>
    <br>
    <main role="main">
        <form method="POST" action='/user/updateprofile'>
            <div class="form-group">
                <label>Name</label>
                <input type="name" class="form-control" value="<%= data.name %>" name="name" id="name"
                    placeholder="Name" required>
            </div>
            <div class="form-group">
                <label>Email address</label>
                <input type="email" class="form-control" value="<%= data.email %>" name="email" id="email"
                    placeholder="email" required disabled>
            </div>
            <div class="form-group">
                <label>Phone Number</label>
                <input type="number" class="form-control" name="phoneno" value="<%= newdata.phoneno %>" id="phoneno"
                    placeholder="phoneno" maxlength="10" required>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label>Gender</label>
                    <select class="form-control" id="gender" name="gender" value="<%= newdata.gender %>" required>
                        <option name="Male" selected>Male</option>
                        <option name="Female">Female</option>
                        <option name="Other">Other</option>
                    </select>
                </div>
                <div class="form-group col-md-4">
                    <label>DOB :</label>
                    <input class=" form-control dobDate" name="DOB" placeholder="MM/DD/YYYY" id="DOB" type="date"
                        autocomplete="off" required="" value="<%= newdata.DOB %>">
                </div>
            </div>
            <div class="form-group">
                <label for="inputAddress">Address</label>
                <input type="text" class="form-control" value="<%= newdata.address1 %>" id="address1" name="address1"
                    placeholder="Adress required" required>
            </div>
            <div class=" form-group">
                <label for="inputAddress2">Address 2</label>
                <input type="text" class="form-control" id="address2" value="<%= newdata.address2 %>" name="address2"
                    placeholder="Address2" required>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputCity">City</label>
                    <input type="text" class="form-control" value="<%= newdata.city %>" id="city" name="city" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="inputState">State</label>
                    <select id="state" name="state" class="form-control" value="<%= newdata.state %>" required>
                        <option selected name="Punjab">Punjab</option>
                        <option name="Delhi">Delhi</option>
                        <option name="Chandigarh">Chandigarh</option>
                        <option name="Jammu&Kashmir">Jammu&Kashmir</option>
                    </select>
                </div>
                <div class="form-group col-md-2">
                    <label for="inputZip">Zip</label>
                    <input type="text" name="zipcode" value="<%= newdata.zipcode %>" class="form-control" id="zipcode"
                        required>
                </div>
            </div>
            <div class="form-group">
                <div class="form-check" name="checkbox">
                    <input class="form-check-input" type="checkbox" name="check" id="invalidCheck2" required disabled
                        checked>
                    <label class="form-check-label" for="invalidCheck2">
                        Agree to terms and conditions
                    </label>
                </div>
            </div>
            <button class="btn btn-primary" type="submit">Update Profile</button>
        </form>
    </main>
</div>