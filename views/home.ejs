<% layout('layout/layout') %>

<% include ./partials/navbar.ejs %>
<main role="main">
  <div class="carousel slide" data-ride="carousel" id="myCarousel">
    <ol class="carousel-indicators">
      <li style="z-index: 102;" data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li style="z-index: 102;" data-target="#myCarousel" data-slide-to="1" class="active"></li>
      <li style="z-index: 102;" data-target="#myCarousel" data-slide-to="2" class="active"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="imgFilter first-slide" src="/img/carsouel/slide1.jpg" alt="First Slide"
          style="width: 100%;height: 100vh;" />
        <div class="container">
          <div class="carousel-caption">
            <h1>Organic Store</h1>
            <p>
              Lorem ipsum dolor sit amet consectetur adipisicing elit.
              Voluptate rerum dicta veniam, minima quisquam ratione natus
              eveniet. Voluptate nulla eum praesentium numquam voluptatum
              blanditiis. In atque perspiciatis fugiat ipsa rerum.
            </p>
            <p>
              <a href="#" role="button" class="btn btn-primary btn-lg" onclick="animatecart()">Products</a>
            </p>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <img class="imgFilter second-slide" src="/img/carsouel/slide2.jpeg" alt="Second Slide"
          style="width: 100%;height: 100vh;" />
        <div class="container">
          <div class="carousel-caption text-left">
            <h1>Organic Store</h1>
            <p>
              Lorem ipsum dolor sit amet consectetur adipisicing elit.
              Voluptate rerum dicta veniam, minima quisquam ratione natus
              eveniet. Voluptate nulla eum praesentium numquam voluptatum
              blanditiis. In atque perspiciatis fugiat ipsa rerum.
            </p>
            <p>
              <a href="#" role="button" class="btn btn-primary btn-lg">Products</a>
            </p>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <img class="imgFilter third-slide" src="/img/carsouel/slide3.jpg" alt="Third Slide"
          style="width: 100%;height: 100vh;" />
        <div class="container">
          <div class="carousel-caption text-right">
            <h1>Organic Store</h1>
            <p>
              Lorem ipsum dolor sit amet consectetur adipisicing elit.
              Voluptate rerum dicta veniam, minima quisquam ratione natus
              eveniet. Voluptate nulla eum praesentium numquam voluptatum
              blanditiis. In atque perspiciatis fugiat ipsa rerum.
            </p>
            <p>
              <a href="#" role="button" class="btn btn-primary btn-lg">Products</a>
            </p>
          </div>
        </div>
      </div>
    </div>
    <a style="z-index: 101;" class="carousel-control-prev" role="button" data-slide="prev" href="myCarousel">
      <span class="caeousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a style="z-index: 101;" class="carousel-control-prev" role="button" data-slide="prev" href="myCarousel">
      <span class="caeousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <div class="container">
    <% if (success.length > 0) { %>
    <br />
    <div class="alert alert-success text-center" style="width:100%;margin-left:10px;margin-right:10px;">
      <%= success %>
    </div>
    <% } %>
    <% if (errors.length > 0) { %>
    <br />
    <div class="alert alert-danger text-center" style="width:100%;margin-left:10px;margin-right:10px;">
      <%= errors %>
    </div>
    <% } %>
    <h2>Products</h2>
    <br />
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#fruittab">Fruit</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#juicetab">Juices</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#vegetabletab">Vegetable</a>
      </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
      <div id="fruittab" class="container tab-pane active">
        <br />
        <h3>Fruit</h3>
        <div class="row" id="fruitDIV"></div>
      </div>
      <div id="juicetab" class="container tab-pane fade">
        <br />
        <h3>Juices</h3>
        <div class="row" id="juiceDIV"></div>
      </div>
      <div id="vegetabletab" class="container tab-pane fade">
        <br />
        <h3>Vegetable</h3>
        <div class="row" id="vegetableDIV"></div>
      </div>
    </div>
  </div>
</main>

<script src="/js/home-js.js"></script>