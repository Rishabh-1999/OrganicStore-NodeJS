<% layout('layout/layout') %>
<% include partials/navbar.ejs %>

<div class="container" style="margin-top:80px;">
    <h1 class="text-center display-4 font-weight-bold"><u>Shopping Cart</u></h1>
    <br>
    <% if (success.length > 0) { %>
    <br>
    <div class="alert alert-success text-center" style="width:100%;margin-left:10px;margin-right:10px;">
        <%= success %>
    </div>
    <% } %>
    <main role="main">
        <div class="row">
            <div class="col">
                <div class="table-responsive-sm">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Product</th>
                                <th scope="col">Name</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Price</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody id="table">
                        </tbody>
                        <tfoot>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                                <th scope="col" id="carttotal">Total: .0.00</th>
                            </tr>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                                <th scope="col">
                                    <form method="POST" action="/user/cleancart">
                                        <button id="btnClean" submit="submit" class="btn text-white btn-warning">
                                            Clean Shopping Cart
                                        </button>
                                    </form>
                                </th>
                                <th scope="col">
                                    <form method="POST" action="/user/buyfromcart">
                                        <button type="submit" id="submitbtn" class="btn btn-success">Buy</button>
                                    </form>
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
        <hr class="featurette-divider">
    </main>
</div>

<script src="/js/cartpage-js.js"></script>