<% layout('layout/layout') %>
<% include partials/navbar.ejs %>

<div class="container" style="margin-top: 80px;">
  <h1 class="text-center display-4 font-weight-bold"><u>Ordered</u></h1>
  <% if (success.length > 0) { %>
  <br />
  <div class="alert alert-success text-center" style="width: 100%; margin-left: 10px; margin-right: 10px;">
    <%= success %>
  </div>
  <% } %>
  <main role="main">
    <div class="row">
      <div class="col">
        <div class="table-responsive-sm">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Product</th>
                <th scope="col">Name</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
                <th scope="col">Date</th>
              </tr>
            </thead>
            <tbody id="table">
              <% Object.keys(ordered).forEach(function(i) { %>
              <tr>
                <td>
                  <img class="text-center" style="width: 90px;" src="<%= ordered[i].productdata.imgloc %>" />
                </td>
                <td class="text-center"><%= ordered[i].productdata.name %></td>
                <td class="text-center"><%= ordered[i].quantity %></td>
                <td class="text-center"><%= ordered[i].productdata.price %></td>
                <td class="text-center">
                  <%= moment(ordered[i].date).format( 'MMM-DD-YYYY') %>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <hr class="featurette-divider" />
  </main>
</div>